{
    "name": "Cover Letter Generator",
    "version": "1.0.0",
    "description": "This extension generates a cover letter based on the individual's professional experience",
    "manifest_version": 3,
    "author": "Harsh Gandhi, Kevin Rodriguez, Momoreoluwa Ayinde ",
      "permissions": ["storage", "activeTab", "scripting", "tabs", "tabGroups","declarativeContent"],
    "background": {
        "service_worker": "background.js"
      },
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "index.html",
        "default_title": "Generating cover letter",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
          }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}


